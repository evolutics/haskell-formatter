-- Initial haskell-formatter.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                haskell-formatter
version:             0.1.0.0
synopsis:            Haskell source code formatter
-- description:         
homepage:            http://www.evolutics.info
-- license:             
license-file:        LICENSE
author:              Benjamin Fischer
maintainer:          benjamin.fischer@evolutics.info
-- copyright:           
category:            Development
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:     Evolutics.Formatting
  other-modules:
                       Evolutics.Code.Abstract,
                       Evolutics.Code.Comment,
                       Evolutics.Code.Concrete,
                       Evolutics.Code.Helper,
                       Evolutics.Code.Location,
                       Evolutics.Code.Merged,
                       Evolutics.Code.Shifting,
                       Evolutics.Code.Source,
                       Evolutics.Tools.Functions,
                       Evolutics.Tools.Lists,
                       Evolutics.Tools.Newlines,
                       Evolutics.Tools.Splitting,
                       Evolutics.Transformations.CommentAssignment,
                       Evolutics.Transformations.CommentFormatting,
                       Evolutics.Transformations.CommentIntegration,
                       Evolutics.Transformations.ElementArrangement
  build-depends:       base, containers, haskell-src-exts
  hs-source-dirs:      src/library
  ghc-options:         -Wall -Werror

executable haskell-formatter
  main-is:             Main.hs
  -- other-modules:       
  build-depends:       base, haskell-formatter
  hs-source-dirs:      src/executable
  ghc-options:         -Wall -Werror

test-suite test
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  build-depends:       base,
                       containers,
                       directory-tree,
                       filepath,
                       haskell-formatter,
                       tasty,
                       tasty-hunit
  hs-source-dirs:      testsuite/src
  ghc-options:         -Wall -Werror
